    style.
      * {
        border-radius: 0 !important;
      }

      .navbar {
        padding: 0 20px;
        margin: 0;
      }

      .brand {
        color: #fff;
        line-height: 50px;
        margin: 0;
      }

      .logged {
        color: #ccc;
        font-size: 75%;
        line-height: 50px;
        margin: 0;
      }

      h2 {
        font-size: 120%;
        font-weight: normal;
        color: #fff;
        padding: 10px 20px;
        margin: 0;
      }

      .availables {
        position: absolute;
        left: 0;
        top: 50px;
        width: 200px;
        bottom: 0;
        overflow-y: scroll;
        list-style: none;
        margin: 0;
        padding: 0;
      }

      .availables li {
        display: block;
        color: #fff;
        cursor: pointer;
        margin: 0;
        padding: 10px 20px;
      }

      .availables li:hover {
        background: rgba(255, 255, 255, 0.1);
      }

      .availables li.selected {
        background: rgba(255, 255, 255, 0.2);
      }

      .selection {
        position: absolute;
        left: 200px;
        top: 50px;
        right: 0;
        bottom: 0;
        color: #fff;
        font-size: 90%;
      }

      .selection table {
        width: 100%;
      }

      .selection th {
        text-align: center;
        padding: 5px;
        border: 1px solid rgba(255, 255, 255, 0.05);
        font-weight: normal;
      }

      .selection td {
        border: 1px solid rgba(255, 255, 255, 0.05);
      }

      .selection h3 {
        font-size: inherit;
      }

      .selection p {
        font-size: inherit;
      }

      .selection ul {
        list-style: none;
        margin: 5px;
        padding: 0;
      }

      .selection ul li {
        display: block;
        margin: 0;
        padding: 0;
      }

