//
// General
//

html {
  background #fff
}

body {
  font 300 16px 'Roboto', sans-serif
  color #686868
  margin 0
}

a {
  color #ffa800
  text-decoration none

  &:hover {
    text-decoration underline
  }
}

strong {
  font-weight 400;
}

//
// Controls
//

.button {
  color #777
  background #e5e5e5
  width 200px
  padding 10px
  display block
  margin 20px auto
  text-align center
  font-size 140%
  font-family 400

  &:hover {
    text-decoration none
    background #ddd
  }
}

.container {
  margin 0
  > * {
    max-width 980px
    padding 0 40px
    margin 0 auto
  }
}

//
// Modules
//

.head {
  @extend .container
  background #f8f8f8

  .brand {
    padding-top 30px
    padding-bottom 30px

    color #888888
    background 40px 30px no-repeat
    background-image url('/static/images/logo.png')

    > h1 {
      margin 0 0 0 170px
      padding 60px 0 0 0
      height 0
      overflow hidden
      background 0 20px no-repeat
      background-image url('/static/images/brand.png')
    }

    > p {
      margin 0 0 0 170px
      padding 0
      overflow hidden
      white-space nowrap
      height 30px
      font-size 90%
    }
  }

  .social {
    float right
    position relative
    top -25px
  }

  @media (max-width: 640px) {
    background transparent
    padding-top 40px

    .brand {
      background-position center 30px
      padding-top 150px

      > h1 {
        margin 0
        padding-top 40px
        background-position center 0
      }

      > p {
        margin 0
        height auto
        text-align center
      }
    }

    .social {
      float none
      top 0
      text-align center
      margin-top 10px
    }
  }
}

.hero {
  @extend .container
  padding-top 320px
  padding-bottom 180px
  height 100px
  font-size 120%

  background no-repeat center center #555
  background-image url('/static/images/cover.jpg')

  > p {
    text-align center
    margin-bottom 5px
  }

  .button {
    color #fff
    background #ffa800
    &:hover {
      background #ffb800
    }
    &:active {
      color #eee
      background #ef9800
    }
  }

  .success {
    color #fff
    background #99dd33
    width 200px
    padding 10px
    display block
    margin 20px auto
    text-align center
    font-size 140%
    font-family 400
  }

  @media (max-width: 640px) {
    padding-top 30px
    padding-bottom 90px
    height auto
    font-size 100%
    background transparent
  }
}

.intro {
  @extend .container
  padding-top 100px
  padding-bottom 100px
  background #f2f2f2

  > * {
    margin-top 80px
    margin-bottom 80px
  }

  > h2 {
    text-align center
    font-size 200%
    font-weight 300
    color #999
  }

  > div {
    height 270px

    > img {
      width 480px
      height 270px
      border none
      display block
    }

    > h3 {
      margin-bottom 0
      padding-top 100px
      font-weight 300
      font-size 250%
    }

    > p {
    }

    &:nth-child(even) {
      > img {
        float right
      }
      > h3,
      > p {
        margin-right 540px
      }
    }

    &:nth-child(odd) {
      > img {
        float left
      }
      > h3,
      > p {
        margin-left 540px
      }
    }

    &.trynow {
      height auto
      margin-top 100px

      > p {
        margin 0
      }

      .button {
        color #fff
        background #ffa800
        &:hover {
          background #ffb800
        }
        &:active {
          color #eee
          background #ef9800
        }
      }
    }
  }

  @media (max-width: 1060px) {
    padding-top 50px
    padding-bottom 50px

    > * {
      margin-top 40px
      margin-bottom 40px
    }

    > h2 {
      font-size 180%
    }

    > div {
      height auto

      > * {
        max-width 480px
        margin 0 auto
      }

      > img {
        width 100%
        height auto
      }

      > h3 {
        padding 0
        font-size 150%
      }

      &:nth-child(even),
      &:nth-child(odd) {
        > img {
          float none
        }
        > h3,
        > p {
          margin 0 auto
        }
      }

      &.trynow {
        margin-top 70px

        > p {
          margin 0 auto
        }
      }
    }

  }
}

.foot {
  @extend .container
  padding-top 30px
  padding-bottom 30px

  > p {
    text-align right
    font-size 75%
    color #999
    a {
      color #999
    }
  }

  @media (max-width: 640px) {
    padding-top 10px
    padding-bottom 0
    height 40px
    background #fff

    > p {
      text-align center
    }
  }
}
